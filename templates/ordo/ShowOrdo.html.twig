{% extends "base.html.twig" %}
{% block title %}   Liste  {% endblock %}
{% block content %}
    <script src="{{ asset("https://kit.fontawesome.com/ae15aac6fb.js") }}" crossorigin="anonymous"></script>


    {% for message in app.flashes('info') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('infos') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col align-self-center">

            <br>
    <div  class="m-4">
        <center><h2 style="color: #2586f5;">Liste des Ordonnances</h2></center>
        <br><br>
    </div>
    <br>

    <a href="{{ path('AddOrdo') }}" class=pull-right >+Ajouter Ordonnance</a>


                <ul class="list-unstyled">
                    <li><a href="#exampleDropdown" aria-expanded="false" data-toggle="collapse"> Trier Par Date: </a>
                        <ul id="exampleDropdown" class="collapse list-unstyled ">
                            <li><a href="{{ path('ListOrdoByDateDESC') }}"> Date (DESC)  </a></li>
                            <li><a href="{{ path('ListOrdoByDateASC') }}"> Date (ASC)  </a></li>
                        </ul>
                    </li>
                </ul>
                <br>


                <table id="ord" class="table table-striped table-hover ">
                    <thead style="backgournd: #2586f5;" >
        <tr>
            <th>Id</th>
            <th>Nom Medecin</th>
            <th>Prenom Medecin</th>
            <th>Téléphone Medecin</th>
            <th>Nom Patient</th>
            <th>Prenom Patient</th>
            <th>Date de Consultation</th>
            <th>Medicament</th>
            <th>Descrption</th>
            <th>Nombre de jours</th>
            <th>Nombre de doses</th>
            <th>Nombre de fois/jour</th>
            <th>Nombre de paquets</th>
            <th >Actions</th>
        </tr>
        </thead>
        <tbody> <!-- table body -->
        {% for i in ord %}
            <tr>
                <td> {{ i.id}}</td>
                <td>{{ i.Medecin.nomMedecin }}</td>
                <td>{{ i.Medecin.prenomMed }}</td>
                <td>{{ i.Medecin.NumTel }}</td>
                <td>{{ i.Patient.nom }}</td>
                <td>{{ i.Patient.prenom }}</td>
                <td>{{ i.Consultation.dateC|date('Y-m-d') }}</td>
                <td>{{ i.medicaments.name }}</td>
                <td>{{ i.description }}</td>
                <td>{{ i.NbrJrs }} jours</td>
                <td>{{ i.NbrDoses }} dose(s)</td>
                <td>{{ i.NbrFois }} fois par jour </td>
                <td>{{ i.NbrPaquets }} paquet(s)</td>

                <td>
                    <a href="{{ path('edit',{'id':i.id}) }}"> Update </a>
                    |
                    <a href="{{ path('Supprimer',{'id':i.id}) }}"
                       onclick="return confirm('Etes-vous sûr de supprimer cette Ordonnance?');">Remove</a>
                    |
                    <a href="{{ path('PdfOrdo',{'id':i.id})}}"> Download </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    </div>
    <br> <br> <br> <br>


{% endblock  %}
