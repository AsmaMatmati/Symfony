{% extends "base.html.twig" %}
{% block title %}   Liste  {% endblock %}
{% block content %}
    <script src="{{ asset("https://kit.fontawesome.com/ae15aac6fb.js") }}" crossorigin="anonymous"></script>


    {% for message in app.flashes('info') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('infos') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

<div class="container">
    <div class="row">
        <div class="col align-self-center">
<br>
            <a href="{{ path('AddOrdo') }}" class=pull-right >+Ajouter Ordonnance</a>

            <ul class="list-unstyled">
                <li><a href="#exampleDropdown" aria-expanded="false" data-toggle="collapse"> Trier Par Date: </a>
                    <ul id="exampleDropdown" class="collapse list-unstyled ">
                        <li><a href="{{ path('ListOrdoByDateDESC') }}"> Date (DESC)  </a></li>
                        <li><a href="{{ path('ListOrdoByDateASC') }}"> Date (ASC)  </a></li>
                    </ul>
                </li>
            </ul>

<section class="tables">
    <div class="container-fluid">
        <div class="row">
            <!-- Form Elements -->
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Liste des Ordonnances</h3>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">



                <table id="ord" class="table table-striped table-hover ">
                    <thead>
        <tr>
            <th>Id</th>

            <th>Email Medecin</th>

            <th>Nom Patient</th>
            <th>Prenom Patient</th>
            <th>Date de Consultation</th>
            <th>Medicament</th>
            <th>Descrption</th>
            <th>Nombre de jours</th>
            <th>Nombre de doses</th>
            <th>Nombre de fois/jour</th>
            <th>Nombre de paquets</th>
            <th colspan="3">Actions</th>
        </tr>
        </thead>
        <tbody> <!-- table body -->
        {% for i in ord %}
            <tr>
                <td> {{ i.id}}</td>

                <td>{{ i.Users.email  }}</td>

                <td>{{ i.Patient.nom }}</td>
                <td>{{ i.Patient.prenom }}</td>
                <td>{{ i.Consultation.dateC|date('Y-m-d') }}</td>
                <td>{{ i.medicaments.name }}</td>
                <td>{{ i.description }}</td>
                <td>{{ i.NbrJrs }} jours</td>
                <td>{{ i.NbrDoses }} dose(s)</td>
                <td>{{ i.NbrFois }} fois par jour </td>
                <td>{{ i.NbrPaquets }} paquet(s)</td>

                <td>
                    <a href="{{ path('edit',{'id':i.id}) }}"> <i class="fas fa-pen"></i></a>
                    |
                    <a href="{{ path('Supprimer',{'id':i.id}) }}"
                       onclick="return confirm('Etes-vous sÃ»r de supprimer cette Ordonnance?');"><i class="fas fa-trash"></i></a>
                    |
                    <a href="{{ path('PdfOrdo',{'id':i.id})}}"> <i class="fas fa-file-download"></i> </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

</section>
        </div>
    </div>
</div>

    <br> <br> <br> <br>
            {% endblock  %}


