            <th>id</th>
            <th>description</th>
            <th>date de creation</th>
            <th>fichiers</th>
            <th>update</th>
            <th>remove</th>
        </tr>
        </thead>
        <tbody> <!-- table body -->

        <br> <br> <br> <br>
        {% for c in dossiers %}
            <tr>
                <td> {{ c.id}}</td>
