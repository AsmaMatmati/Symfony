{% block title %} {% endblock  %}

{% block body %}
    <div class="m-4">
        <h2 style="color: #22aab1;">Liste des dossiers</h2>
    </div>
    <table class="table table-striped table-hover">
        <thead style="backgournd: #efefef;"> <!-- hedhi yaani table headers -->
